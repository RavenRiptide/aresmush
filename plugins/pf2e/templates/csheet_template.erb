<%= header %>
<%= center("#{title_color}Pathfinder 2E Combat Sheet: #{name}", 78) %>%xn
<%= divider %>
<%= section_line("Offense") %>
<%= left("#{item_color}Combat Speed%xn: #{speed} feet", 78) %>
<% if movement %>
<%= movement %>
<% end %>
<%= left("#{item_color}Class DC%xn: #{class_dc}",39) -%>
<%= left("#{item_color}Perception%xn: #{perception}",39) %>
<%= section_line("Unarmed Attacks") %>
<% unarmed_attacks.each do |atk| %>
<%= atk %>
<% end %>
<%= section_line("Weapons") %>
<% weapons.each do |weapon| %>
<%= weapon %>
<% end %>
<%= section_line("Defense") %>
<%= left("#{item_color}HP%xn: #{hp}",39) -%>
<%= left("#{item_color}Temp HP%xn: #{temp_hp}",39) %>
<%= left("#{item_color}Armor Class (AC)%xn: #{ac}",39) -%>
<%= left("#{item_color}AC / Shield%xn: #{ac_with_shield}",39) %>
<%= section_line("Saves and Resistances") %>
<% saves.each do |save| %>
<%= save -%>
<% end %>

<%= section_line("Conditions") %>
<%= conditions %>
<%= footer %>
