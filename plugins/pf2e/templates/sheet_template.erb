<%= header %>
<%= center (title_color"Pathfinder 2E: #{char_name}", 78) %>%xn
<%= divider %>
<% if section == "info" || "all" %>
<%= section_line("Basic Information") %>
<%= left("%xhAncestry%xn: #{ancestry}", 39) -%>
<%= left("%xhHeritage%xn: #{heritage}", 39) %>
<%= left("%xhBackground%xn: #{background}", 39) -%>
<%= left("%xhXP%xn: #{xp}", 39) %>
<%= left("%xhClass/Level%xn: #{charclass} #{level}", 39) -%>
<%= left("%xh#{subclass_name}%xn: #{subclass}", 39) %>
<%= left("%xhFaith%xn: #{faith}", 39) -%>
<%= left("%xhDeity%xn: #{deity}", 39) %>
<%= section_line("Traits") %>
<%= traits %>
<% end %>
<%= section == "all" ? section_line("Abilities") : footer %>
<% if section == "ability" || "all" %>
<% abilities.each do |a| %>
<%= a -%>
<% end %>
<% end %>
<%= section == "all" ? section_line("Combat") : footer %>
