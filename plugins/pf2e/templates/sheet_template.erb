<%= header %>
<%= center("#{title_color}Pathfinder 2E: #{name}", 78) %>%xn
<%= divider %>
<% if section == "info" || "all" %>
<%= section_line("Basic Information") %>
<%= left("#{item_color}Ancestry%xn: #{ancestry}", 39) -%>
<%= left("#{item_color}Heritage%xn: #{heritage}", 39) %>
<%= left("#{item_color}Background%xn: #{background}", 39) -%>
<%= left("#{item_color}XP%xn: #{xp}", 39) %>
<%= left("#{item_color}Class/Level%xn: #{charclass} #{level}", 39) -%>
<%= left("#{item_color}#{subclass_name}%xn: #{subclass}#{subclass_option}", 39) %>
<%= left("#{item_color}Faith%xn: #{faith}", 39) -%>
<%= left("#{item_color}Region%xn: #{region}", 39) %>
<%= left("#{item_color}Deity%xn: #{deity}", 39) -%>
<%= left("#{item_color}Alignment%xn: #{alignment}", 26) %>
<%= section_line("Traits") %>
<%= traits %>
<% end %>
<% if section == "all" %>
<%= section_line("Abilities") -%>
<% end %>
<% if section == "ability" || "all" -%>
<% abilities.each do |a| -%>
<%= a -%>
<% end %>

<% end %>
<% if section == "all" %>
<%= section_line("Stats") %>
<%= left("#{item_color}HP%xn: #{hp}",39) -%>
<%= left("#{item_color}Temp HP%xn: #{temp_hp}",39) %>
<%= left("#{item_color}Class DC%xn: #{class_dc}",39) -%>
<%= left("#{item_color}Perception%xn: #{perception}",39) %>
<%= left("#{item_color}Size%xn: #{size}", 39) -%>
<%= left("#{item_color}Base Speed%xn: #{base_speed}", 39) %>
<%= "#{item_color}Other Movement%xn: #{movement}"%>
<%= "#{item_color}Senses and Special Abilities%xn: #{specials}" %>
<%= section_line("Proficiencies") %>
<%= "#{item_color}Weapons%xn: #{weapon_prof}" %>
<%= "#{item_color}Armor%xn: #{armor_prof}" %>
<%= "%rFull calculations for weapons and armor are shown in %x172csheet%xn." %>
<%= section_line("Saves and Resistances") %>
<% saves.each do |save| %>
<%= save -%>
<% end %>

<%= section_line("Conditions") %>
<%= conditions %>
<% end %>
<% if section == "all" %>
<%= section_line("Skills") -%>
<% end %>
<% if section == "skills" || "all" %>
<% skills.each do |s| %>
<%= s -%>
<% end %>
<% end %>

<%= section_line("Languages") %>
<%= languages %>
<% if section == "all" %>
<%= section_line("Feats") %>
<% end %>
<% if section == "feats" || "all" %>
<%= feats %>
<% end %>
<% if section == "all" %>
<%= section_line("Known For...") -%>
<% known_for.each do |kf| %>
<%= kf -%>
<% end %>

<% if section == "all" %>
<%= section_line("Magic") %>
<% if magic_stats %>
<% spell_dcs.each do |dcs| %>
<%= dcs %>
<% end %>
<% else %>
<%= no_magic_msg %>
<% end %>
<% end %>
<% end %>
<%= footer %>
