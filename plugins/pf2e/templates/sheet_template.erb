<%= header %>
<%= center("#{title_color}Pathfinder 2E: #{name}", 78) %>%xn
<%= divider %>
<% if section == "info" || "all" %>
<%= section_line("Basic Information") %>
<%= left("#{item_color}Ancestry%xn: #{ancestry}", 39) -%>
<%= left("#{item_color}Heritage%xn: #{heritage}", 39) %>
<%= left("#{item_color}Background%xn: #{background}", 39) -%>
<%= left("#{item_color}XP%xn: #{xp}", 39) %>
<%= left("#{item_color}Class/Level%xn: #{charclass} #{level}", 39) -%>
<%= left("#{item_color}#{subclass_name}%xn: #{subclass}", 39) %>
<%= left("#{item_color}Faith%xn: #{faith}", 26) -%>
<%= left("#{item_color}Deity%xn: #{deity}", 26) -%>
<%= left("#{item_color}Alignment%xn: #{alignment}", 26) %>
<%= section_line("Traits") %>
<%= traits %>
<% end %>
<% if section == "all" %>
<%= section_line("Abilities") %>
<% end %>
<% if section == "ability" || "all" %>
<% abilities.each do |a| %>
<%= a -%>
<% end %>
<% end %>
<% if section == "all" %>
<%= section_line("Combat") %>
<% end %>
<%= footer %>
