<%= header %>
<%= center("#{title_color}Pathfinder 2E: #{name}", 78) %>%xn
<%= divider %>
<% if section == "info" || "all" %>
<%= section_line("Basic Information") %>
<%= left("%xhAncestry%xn: #{ancestry}", 39) -%>
<%= left("%xhHeritage%xn: #{heritage}", 39) %>
<%= left("%xhBackground%xn: #{background}", 39) -%>
<%= left("%xhXP%xn: #{xp}", 39) %>
<%= left("%xhClass/Level%xn: #{charclass} #{level}", 39) -%>
<%= left("%xh#{subclass_name}%xn: #{subclass}", 39) %>
<%= left("%xhFaith%xn: #{faith}", 26) -%>
<%= left("%xhDeity%xn: #{deity}", 26) -%>
<%= left("%xhAlignment%xn: #{alignment}", 26) %>
<%= section_line("Traits") %>
<%= traits %>
<% end %>
<% if section == "all" %>
<%= section_line("Abilities") %>
<% end %>
<% if section == "ability" || "all" %>
<% abilities.each do |a| %>
<%= a -%>
<% end %>
<% end %>
<% if section == "all" %>
<%= section_line("Combat") %>
<% end %>
<%= footer %>
